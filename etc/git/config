# vim: ft=gitconfig
# ~/.gitconfig
[user]
  name  = Paulo Patto
  email = paulopatto@gmail.com

[github]
  user = paulopatto

[push]
  default = simple

[apply]
  whitespace = fix

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local   = yellow
  remote  = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  new  = green bold

[core]
  excludefile = $GITIGNORE
  editor      = vim

[merge]
  log = true

[alias]
  st = status -sb
  ci = commit -v
